# 应用配置
APP_NAME="智能意图识别系统"
DEBUG=true
LOG_LEVEL=INFO

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=intent_recognition_system

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 缓存配置 (秒)
CACHE_TTL_CONFIG=3600
CACHE_TTL_NLU=1800
CACHE_TTL_SESSION=86400

# LLM配置 (本地xinference托管，与OpenAI兼容)
LLM_MODEL=qwen2.5-7b-instruct
LLM_API_KEY=EMPTY
LLM_API_BASE=http://localhost:9997/v1
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# Duckling配置
DUCKLING_URL=http://localhost:8000
DUCKLING_TIMEOUT=5

# RAGFLOW配置
RAGFLOW_API_URL=https://api.ragflow.com/v1/chats_openai/{chat_id}/chat/completions
RAGFLOW_CHAT_ID=your_ragflow_chat_id_here
RAGFLOW_API_KEY=your_ragflow_api_key_here
RAGFLOW_TIMEOUT=30
RAGFLOW_ENABLED=true

# 安全配置
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
API_CALL_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# 意图识别配置
INTENT_CONFIDENCE_THRESHOLD=0.7
AMBIGUITY_DETECTION_THRESHOLD=0.1
SLOT_CONFIDENCE_THRESHOLD=0.6

# 会话配置
SESSION_TIMEOUT_SECONDS=86400
MAX_CONVERSATION_TURNS=50

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 日志配置
LOG_FILE=logs/app.log